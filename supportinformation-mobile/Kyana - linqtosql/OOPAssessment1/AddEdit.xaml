            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="IngSubmitListView" HorizontalAlignment="Left" Height="80" Margin="169,178,0,0" VerticalAlignment="Top" Width="105">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="AddIngBTN" Content="&gt;&gt;" HorizontalAlignment="Left" Height="26" Margin="126,178,0,0" VerticalAlignment="Top" Width="38" Click="AddIngBTN_Click"/>
        <Button x:Name="RemIngBTN" Content="&lt;&lt;" HorizontalAlignment="Left" Height="24" Margin="126,234,0,0" VerticalAlignment="Top" Width="38" RenderTransformOrigin="0.263,0.44" Click="RemIngBTN_Click"/>

    </Grid>
</Window>
